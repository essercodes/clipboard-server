{
  "name": "clipboard-server",
  "productName": "clipboard-server",
  "version": "1.0.0",
  "description": "An Electron app that runs an Express server, allowing remote text to be copied to the system clipboard via URL parameters.",
  "main": ".vite/build/main.js",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "make-win-x64": "electron-forge make --platform=win32 --arch=x64",
    "make-mac-x64": "electron-forge make --platform=darwin --arch=x64",
    "make-mac-arm": "electron-forge make --platform=darwin --arch=arm64",
    "publish": "electron-forge publish",
    "lint": "eslint --ext .ts,.tsx ."
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.6.1",
    "@electron-forge/maker-deb": "^7.6.1",
    "@electron-forge/maker-rpm": "^7.6.1",
    "@electron-forge/maker-squirrel": "^7.6.1",
    "@electron-forge/maker-zip": "^7.6.1",
    "@electron-forge/plugin-auto-unpack-natives": "^7.6.1",
    "@electron-forge/plugin-fuses": "^7.6.1",
    "@electron-forge/plugin-vite": "^7.6.1",
    "@electron/fuses": "^1.8.0",
    "@types/copy-paste": "^1.1.33",
    "@types/cors": "^2.8.17",
    "@types/electron-squirrel-startup": "^1.0.2",
    "@types/react": "^19.0.8",
    "@types/react-dom": "^19.0.3",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "electron": "34.1.1",
    "eslint": "^8.0.1",
    "eslint-plugin-import": "^2.25.0",
    "ts-node": "^10.0.0",
    "typescript": "~4.5.4",
    "vite": "^5.0.12"
  },
  "keywords": [],
  "author": {
    "name": "Max Esser",
    "email": "max@esser.codes"
  },
  "license": "MIT",
  "dependencies": {
    "@tailwindcss/postcss": "^4.0.6",
    "@types/express": "^5.0.0",
    "copy-paste": "^1.5.3",
    "cors": "^2.8.5",
    "electron-squirrel-startup": "^1.0.1",
    "express": "^4.21.2",
    "postcss": "^8.5.2",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "scheduler": "^0.25.0",
    "tailwindcss": "^4.0.6"
  }
}
